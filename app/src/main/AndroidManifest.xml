            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ulisboa.tecnico.cmov.airdesk.MainActivity" />
        </activity>
        <activity
            android:name=".OwnSharedWorkspacesListActivity"
            android:label="@string/activity_own_shared_workspaces_list"
