            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ulisboa.tecnico.cmov.airdesk.MainActivity" />
        </activity>
        <activity
            android:name=".ForeignSubscribedWorkspacesListActivity"
            android:label="@string/activity_foreign_subscribed_workspaces_list"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ulisboa.tecnico.cmov.airdesk.MainActivity" />
        </activity>
        <activity
            android:name=".OwnPrivateWorkspaceActivity"
            android:label="@string/title_activity_own_private_workspace"></activity>
        <activity
