<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk.OwnSharedWorkspaceActivity">

    <ListView
        android:id="@+id/lv_filesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_filesList" />

    <LinearLayout
        android:id="@+id/ll_filesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bt_new_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New File"
            android:layout_weight="1"
            android:onClick="newFile"/>

        <Button
            android:id="@+id/bt_delete_ws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="1"
            android:onClick="deleteWorkspace"/>

        <Button
            android:id="@+id/bt_unpublish_ws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UnPublish"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_share_ws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>
